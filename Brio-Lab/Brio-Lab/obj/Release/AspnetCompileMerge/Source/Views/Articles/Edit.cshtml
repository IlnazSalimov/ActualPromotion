@model Brio.Models.EditArticle

@{
    ViewBag.Title = "РЕДАКТИРОВАТЬ";
    Layout = "~/Views/Layouts/LayoutDefault.cshtml";
}

@section Styles{
    <link href="~/Content/css/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/css/kendo.default.min.css" rel="stylesheet" />

    <style>
        table.k-editor {
            display: inline-block;
            width: 52%;
            height: 200px;
        }
    </style>
}

<div class="container run1">
    <div data-id="0" class="slider"></div>
</div>
<div class="block_ins">
    <div class="title">
        @ViewBag.Title
    </div>
    <article class="page-content" style="padding: 5px; box-sizing: border-box;">
        @using (Html.BeginForm("Edit", "Articles", FormMethod.Post, new { @class = "pure-form pure-form-aligned", enctype = "multipart/form-data" }))
        {
            <fieldset>
                @Html.HiddenFor(model => model.ID)
                
                <div class="pure-control-group">
                    @Html.LabelFor(model => model.Title)
                    @Html.TextBoxFor(model => model.Title, new {@class="pure-input-1-2", placeholder = "Заглавие" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>

                <div class="pure-control-group">
                    @Html.LabelFor(model => model.Text)
                    @Html.TextAreaFor(model => model.Text,5, 40, new { @class = "pure-input-1-2", placeholder = "Текст" })
                    @Html.ValidationMessageFor(model => model.Text)
                </div>
                <div class="pure-controls">
                    <button type="submit" class="pure-button pure-button-primary">СОХРАНИТЬ</button>
                </div>
            </fieldset>
        }
    </article>
</div>
<div class="bottom_arrows_container">
    <div class="bottom-arrows">
    </div>
</div>

<script src="~/Content/js/kendo.web.min.js"></script>
<script src="~/Content/js/kendo.ru-RU.js"></script>
<script>
    (function () {
        $("#Text").kendoEditor({
            encoded: false
        });
    })();
</script>
