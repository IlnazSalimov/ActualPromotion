@model Brio.Models.EditCompanyWork

@{
    ViewBag.Title = "РЕДАКТИРОВАТЬ РАБОТУ";
    Layout = "~/Views/Layouts/LayoutDefault.cshtml";
}

<div class="container run1">
    <div data-id="0" class="slider"></div>
</div>
<div class="block_ins">
    <div class="title">
        @ViewBag.Title
    </div>
    <article class="page-content">
        <div class="padding_container">
            @using (Html.BeginForm("EditCompanyWork", "Articles", FormMethod.Post, new { @class = "pure-form pure-form-aligned", enctype = "multipart/form-data" }))
            {
                <fieldset>
                    @Html.HiddenFor(model => model.ID)

                    <div class="pure-control-group">
                        @Html.LabelFor(model => model.Title)
                        @Html.TextBoxFor(model => model.Title, new { @class = "pure-input-1-2"})
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>

                    <div class="pure-control-group">
                        @Html.LabelFor(model => model.Description)
                        @Html.TextAreaFor(model => model.Description, 5, 40, new { @class = "pure-input-1-2"})
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                    <div class="pure-controls">
                        <button type="submit" class="pure-button pure-button-primary">СОХРАНИТЬ</button>
                    </div>
                </fieldset>
            }
        </div>
    </article>
</div>
