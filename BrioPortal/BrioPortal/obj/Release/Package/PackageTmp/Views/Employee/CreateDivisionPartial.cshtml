@model Brio.Models.CreateDivision

@if (User.IsInRole("Admin")) { 
    using (Html.BeginForm("AddDivision", "Employee", FormMethod.Post, new { @class = "division-create" }))
    {
        <div class="controls-container">
            <div class="title">Добавить отдел</div>
            <p>@Html.TextBoxFor(d => d.Name, new { placeholder = Html.DisplayNameFor(d => d.Name) })</p>
            <p>@Html.TextBoxFor(d => d.Head, new { placeholder = Html.DisplayNameFor(d => d.Head) })</p>
        </div>
        <button type="submit">
            <h2 class="right creat-title"><span>Создать</span></h2>
        </button>
    }
}