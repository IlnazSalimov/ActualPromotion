@model Brio.Models.CreatePortalAccount
@using Brio
@using Brio.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/DefaultLayouts.cshtml";
}

<section>
    @Html.Partial("RightBarNews")
    <div class="content">
        <form action="" method="post" name="serch">
            <input name="name" type="text" placeholder="ВВЕДИТЕ НАЗВАНИЕ ДОКУМЕНТА">
            <button type="submit">
                <h2 class="left"><span>Поиск</span></h2>
            </button>
        </form>

        <div class="content-right-bar account-create-form" style="display: none">
            <h2>Создание аккаунта</h2>
            @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { @class = "acc-form" }))
            {
                <p>
                    @Html.LabelFor(a => a.Name):
                    @Html.TextBoxFor(a => a.Name)
                </p>
                <p>
                    @Html.LabelFor(a => a.Surname):
                    @Html.TextBoxFor(a => a.Surname)
                </p>
                <p>
                    @Html.LabelFor(a => a.Patronymic):
                    @Html.TextBoxFor(a => a.Patronymic)
                </p>
                <p>
                    @Html.LabelFor(a => a.Email):
                    @Html.TextBoxFor(a => a.Email)
                </p>
                <p>
                    @Html.LabelFor(a => a.Password):
                    @Html.TextBoxFor(a => a.Password)
                </p>
                <p>
                    @Html.LabelFor(a => a.ConfirmPassword):
                    @Html.TextBoxFor(a => a.ConfirmPassword)
                </p>
                <p>
                    @Html.LabelFor(a => a.Phone):
                    @Html.TextBoxFor(a => a.Phone)
                </p>
                <p>
                    @Html.LabelFor(a => a.Post):
                    @Html.TextBoxFor(a => a.Post)
                </p>
                <p>
                    @Html.LabelFor(a => a.CompanyId):
                    @Html.DropDownListFor(a => a.CompanyId, ViewBag.Companies as SelectList, "Выберите компанию")
                </p>
                <p>
                    @Html.LabelFor(a => a.RememberMe):
                    @Html.CheckBoxFor(a => a.RememberMe)
                </p>
                @Html.HiddenFor(a => a.RoleId)

                <button type="submit">
                    <h2 class="right creat-title"><span>Создать</span></h2>
                </button>
            }
        </div>
        <div class="content-right-bar info-card" style="display: none">
            <h2>Карточка сотрудника</h2>
            <div class="staf">
                <img src="photo/Tarasova_Ybilei.jpg" width="120" height="140" alt="staff">
                <h3 class="names">
                </h3>

                <ul class="staf-text">
                    <li class="company">Компания: <span></span></li>
                    <li>&nbsp;</li>
                    <li>Личные данные:<span></span></li>
                    <li class="phone">тел. <span></span></li>
                    <li class="email">е-mail: <span></span></li>
                </ul>
            </div>
        </div>
        <div class="content-left-bar">
            <h2 class="right white shadow"><span class="project-title">Аккаунты</span></h2>
            <div class="wrapp accaunt-page">
                <ul>
                    <li>
                        <p><span>Администратор</span></p>
                        <ul>
                            @foreach (var a in (IEnumerable<InfoCard>)ViewBag.Admins)
                            {
                                <li data-infocard-id="@a.ID">@a.Surname @a.Name @a.Patronymic</li>
                            }
                        </ul>
                    </li>
                    <li>
                        <p><span>Проект-менеджер</span></p>
                        <ul>
                            @foreach (var a in (IEnumerable<InfoCard>)ViewBag.ProjectManager)
                            {
                                <li data-infocard-id="@a.ID">@a.Surname @a.Name @a.Patronymic</li>
                            }
                        </ul>
                    </li>
                    <li>
                        <p><span>Клиент</span></p>
                        <ul>
                            @foreach (var a in (IEnumerable<InfoCard>)ViewBag.Clients)
                            {
                                <li data-infocard-id="@a.ID">@a.Surname @a.Name @a.Patronymic</li>
                            }
                        </ul>
                    </li>
                    <li>
                        <p><span>Сотрудник</span></p>
                        <ul>
                            @foreach (var a in (IEnumerable<InfoCard>)ViewBag.Employees)
                            {
                                <li data-infocard-id="@a.ID">@a.Surname @a.Name @a.Patronymic</li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
            <h2 class="right white no-shadow"><span class="project-title">Создать аккаунт</span></h2>
            <ul class="acc-open">
                @foreach (var r in (ViewBag.Roles as List<Brio.Models.Role>))
                {
                    <li data-role-id="@r.ID">@r.CyrillicName</li>
                }
            </ul>
            

            <script>
                $(document).ready(function () {
                    var _infoCardPanel = new infoCardPanel();
                    _infoCardPanel.init();

                    var firstInfoCardId = $(".accaunt-page ul ul li").first().attr("data-infocard-id");
                    _infoCardPanel.getInfoCard(firstInfoCardId, function (infocard) {
                        _infoCardPanel.show(infocard);
                    });
                });
            </script>
        </div>
    </div>

</section>
